.side-bar
  .header
    .header__name<
      = current_user.name
    .header__lists
      = link_to new_group_path do
        =fa_icon 'pencil-square-o',class:'fa icon'
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'fa icon'
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group__name
            = group.name
          .group__message
            = group.show_last_message
