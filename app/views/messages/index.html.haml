-@name = 'genta'
-@date = '2018/05/17'
-@text = 'なるほど'

-@group_name = 'roomn'
-@group_message = 'texttext'
-# サイドバー
.side-bar
  .header
    .header__name<
      = current_user.name
    .header__lists
      = link_to do
        =fa_icon 'pencil-square-o',class:'fa'
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'fa'
      -#%i.fa.fa-edit.fa_fw
      -#%i.fa.fa-cog.fa_fw
  .groups
    - 3.times do
      = render partial: "group", locals: { group_name: @group_name, group_message: @group_message }

-# タイトルバー
.chat
  .header
    .left-header
      .left-header__title
        tech
      %ul.left-header__members
        Member :
        %li.member
          #{@name}
    .right-header
      %a.right-header__button
        Edit
  -#<!-- コメント表示 -->
  .messages
    - 5.times do
      = render partial: "message", locals: { name: @name, date: @date, text: @text }

  -#<!-- コメント書くところ -->
  .send
    %input.send__input{:type => "text", :placeholder =>" type a message" }
      %i.fa.fa-image
    %input.send__button{:type => "submit", :value => "Send"}


